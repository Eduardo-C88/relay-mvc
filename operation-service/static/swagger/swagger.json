{
  "openapi": "3.0.0",
  "info": {
    "title": "Transaction Service API",
    "version": "1.0.0",
    "description": "API documentation for managing purchases and borrowings.\n\nThis service also publishes events to RabbitMQ:\n- Purchase events (`PurchaseRequestCreated` and `PurchaseRequestConfirmed`)\n- Borrow events (`BorrowRequestCreated` and `BorrowRequestConfirmed`)"
  },
  "servers": [
    {
      "url": "http://localhost:3004",
      "description": "Local development server"
    }
  ],
  "tags": [
    { "name": "Purchases", "description": "Purchase management endpoints" },
    { "name": "Borrowings", "description": "Borrowing management endpoints" }
  ],
  "paths": {
    "/api/borrowings/:id": {
      "post": {
        "summary": "Create a borrow request",
        "tags": ["Borrowings"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["startDate", "endDate"],
                "properties": {
                  "startDate": { "type": "string", "format": "date-time" },
                  "endDate": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Borrow request created" },
          "400": { "description": "Resource not available or missing dates" },
          "500": { "description": "Failed to create borrow request" }
        }
      }
    },
    "/api/borrowings/:id/approve": {
      "post": {
        "summary": "Owner approves a borrow request",
        "tags": ["Borrowings"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Borrow request approved" },
          "400": { "description": "Borrow cannot be approved" },
          "500": { "description": "Failed to approve borrow request" }
        }
      }
    },
    "/api/borrowings/:id/reject": {
      "post": {
        "summary": "Owner rejects a borrow request",
        "tags": ["Borrowings"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Borrow request rejected" },
          "400": { "description": "Borrow cannot be rejected" },
          "500": { "description": "Failed to reject borrow request" }
        }
      }
    },
    "/api/borrowings/history": {
      "get": {
        "summary": "Get own borrowings history",
        "tags": ["Borrowings"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of borrowings" },
          "500": { "description": "Failed to fetch borrow history" }
        }
      }
    },
    "/api/borrowings/:id/history": {
      "get": {
        "summary": "Get borrowings history for a specific user (admin/moderator)",
        "tags": ["Borrowings"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "User borrowings" },
          "500": { "description": "Failed to fetch user borrowings" }
        }
      }
    },
    "/api/borrowings/all": {
      "get": {
        "summary": "Get all borrowings (admin/moderator)",
        "tags": ["Borrowings"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "All borrowings" },
          "500": { "description": "Failed to fetch borrowings" }
        }
      }
    },
    "/api/purchases/:resourceId/purchase": {
      "post": {
        "summary": "Create a purchase request",
        "tags": ["Purchases"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "resourceId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "201": { "description": "Purchase request created" },
          "400": { "description": "Resource not available" },
          "500": { "description": "Failed to create purchase" }
        }
      }
    },
    "/api/purchases/:resourceId/approve": {
      "post": {
        "summary": "Seller approves a purchase request",
        "tags": ["Purchases"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "resourceId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Purchase request approved" },
          "400": { "description": "Purchase cannot be approved" },
          "500": { "description": "Failed to approve purchase request" }
        }
      }
    },
    "/api/purchases/:resourceId/reject": {
      "post": {
        "summary": "Seller rejects a purchase request",
        "tags": ["Purchases"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "resourceId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Purchase request rejected" },
          "400": { "description": "Purchase cannot be rejected" },
          "500": { "description": "Failed to reject purchase request" }
        }
      }
    },
    "/api/purchases/history": {
      "get": {
        "summary": "Get own purchase history",
        "tags": ["Purchases"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of purchases" },
          "500": { "description": "Failed to fetch purchase history" }
        }
      }
    },
    "/api/purchases/:id/history": {
      "get": {
        "summary": "Get purchases history for a specific user (admin/moderator)",
        "tags": ["Purchases"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "User purchases" },
          "500": { "description": "Failed to fetch user purchases" }
        }
      }
    },
    "/api/purchases/all": {
      "get": {
        "summary": "Get all purchases (admin/moderator)",
        "tags": ["Purchases"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "All purchases" },
          "500": { "description": "Failed to fetch all purchases" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": { "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" } },
    "schemas": {
      "Purchase": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "buyerId": { "type": "integer" },
          "resourceId": { "type": "integer" },
          "sellerId": { "type": "integer" },
          "statusId": { "type": "integer" },
          "agreedPrice": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "Borrowing": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "borrowerId": { "type": "integer" },
          "resourceId": { "type": "integer" },
          "ownerId": { "type": "integer" },
          "statusId": { "type": "integer" },
          "startDate": { "type": "string", "format": "date-time" },
          "endDate": { "type": "string", "format": "date-time" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
