{
  "openapi": "3.0.0",
  "info": {
    "title": "Resource Service API",
    "version": "1.0.0",
    "description": "API documentation for resource and category management. \n\nThis service also consumes domain events from RabbitMQ:\n- User events (`UserCreated` and `UserUpdated`) from the `user_events` fanout exchange.\n- Purchase request events (`PurchaseRequestCreated` and `PurchaseRequestConfirmed`) from point-to-point queues."
  },
  "x-messaging": {
    "rabbitmq": {
      "consumers": {
        "user_events": {
          "exchange": "user_events",
          "type": "fanout",
          "queue": "resource_service_user_sync",
          "description": "Consumes UserCreated and UserUpdated events to sync user profiles in the resource service.",
          "events": {
            "UserCreated": {
              "summary": "A new user was created",
              "payload": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "name": { "type": "string" },
                  "email": { "type": "string" }
                }
              }
            },
            "UserUpdated": {
              "summary": "An existing user was updated",
              "payload": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "name": { "type": "string" },
                  "email": { "type": "string" }
                }
              }
            }
          }
        },
        "PurchaseRequestCreated": {
          "queue": "PurchaseRequestCreated",
          "description": "Consumes new purchase requests to update resource status.",
          "payload": {
            "type": "object",
            "properties": {
              "resourceId": { "type": "integer" },
              "statusId": { "type": "integer" }
            }
          }
        },
        "PurchaseRequestConfirmed": {
          "queue": "PurchaseRequestConfirmed",
          "description": "Consumes confirmed purchase requests to update resource status.",
          "payload": {
            "type": "object",
            "properties": {
              "resourceId": { "type": "integer" },
              "statusId": { "type": "integer" }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3002",
      "description": "Local development server"
    }
  ],
  "tags": [
    { "name": "Resources", "description": "Resource management endpoints" },
    { "name": "Categories", "description": "Category management endpoints" }
  ],
  "paths": {
    "/api/resources": {
      "post": {
        "summary": "Create a new resource",
        "tags": ["Resources"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateResourceRequest" } } }
        },
        "responses": {
          "201": { "description": "Resource created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Resource" } } } },
          "400": { "description": "Missing title or categoryId" },
          "500": { "description": "Failed to create resource" }
        }
      },
      "get": {
        "summary": "Get all resources",
        "tags": ["Resources"],
        "responses": {
          "200": { "description": "A list of resources", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Resource" } } } } },
          "500": { "description": "Failed to fetch resources" }
        }
      }
    },
    "/api/resources/filter": {
      "get": {
        "summary": "Filter resources",
        "tags": ["Resources"],
        "parameters": [
          { "name": "title", "in": "query", "schema": { "type": "string" } },
          { "name": "categoryId", "in": "query", "schema": { "type": "integer" } },
          { "name": "ownerId", "in": "query", "schema": { "type": "integer" } },
          { "name": "minPrice", "in": "query", "schema": { "type": "number" } },
          { "name": "maxPrice", "in": "query", "schema": { "type": "number" } },
          { "name": "statusId", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Filtered resources", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Resource" } } } } },
          "500": { "description": "Failed to filter resources" }
        }
      }
    },
    "/api/resources/{id}": {
      "get": {
        "summary": "Get resource by ID",
        "tags": ["Resources"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Resource found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Resource" } } } },
          "404": { "description": "Resource not found" },
          "500": { "description": "Failed to fetch resource" }
        }
      },
      "patch": {
        "summary": "Edit a resource",
        "tags": ["Resources"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/EditResourceRequest" } } } },
        "responses": {
          "200": { "description": "Resource updated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Resource" } } } },
          "400": { "description": "No valid fields provided" },
          "403": { "description": "Forbidden: Not the owner" },
          "404": { "description": "Resource not found" },
          "500": { "description": "Failed to update resource" }
        }
      },
      "delete": {
        "summary": "Delete resource",
        "tags": ["Resources"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "Resource deleted" },
          "403": { "description": "Forbidden: Not owner or admin/moderator" },
          "404": { "description": "Resource not found" },
          "500": { "description": "Failed to delete resource" }
        }
      }
    },
    "/api/categories": {
      "post": {
        "summary": "Create a new category",
        "tags": ["Categories"],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateCategoryRequest" } } } },
        "responses": {
          "201": { "description": "Category created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } } },
          "400": { "description": "Category name is required" },
          "500": { "description": "Failed to create category" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": { "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" } },
    "schemas": {
      "Resource": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" },
          "categoryId": { "type": "integer" },
          "ownerId": { "type": "integer" },
          "statusId": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "CreateResourceRequest": {
        "type": "object",
        "required": ["title", "categoryId"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" },
          "categoryId": { "type": "integer" }
        }
      },
      "EditResourceRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" },
          "categoryId": { "type": "integer" },
          "statusId": { "type": "integer" }
        }
      },
      "Category": { "type": "object", "properties": { "id": { "type": "integer" }, "name": { "type": "string" } } },
      "CreateCategoryRequest": { "type": "object", "required": ["name"], "properties": { "name": { "type": "string" } } }
    }
  }
}
